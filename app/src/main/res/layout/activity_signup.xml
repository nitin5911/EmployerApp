<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context="com.example.amit.employeeapp.outer_activities.Signup">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="User name"
        android:layout_margin="5dp"
        android:textStyle="bold"
        android:maxLength="1"
        android:id="@+id/etxtunameid"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!--android:textCursorDrawable="#64a0b6"-->
    <!--android:backgroundTint="#64a0b6"-->
    <!--android:textColorHint="#64a0b6"-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email ID"
        android:layout_margin="5dp"
        android:maxLength="1"
        android:inputType="textEmailAddress"
        android:textStyle="bold"
        android:id="@+id/etxtemailid"
        app:layout_constraintTop_toBottomOf="@+id/etxtunameid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etxtpassid"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_margin="5dp"
        android:maxLength="1"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:id="@+id/etxtpassid"
        app:layout_constraintTop_toBottomOf="@+id/etxtemailid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/etxtcpassid"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm Password"
        android:layout_margin="5dp"
        android:maxLength="1"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:id="@+id/etxtcpassid"
        app:layout_constraintTop_toBottomOf="@+id/etxtpassid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nextbtnid"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextbtnid"
        android:hint="NEXT"
        android:background="@drawable/roundbtnblue"
        app:layout_constraintTop_toBottomOf="@+id/etxtcpassid"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>